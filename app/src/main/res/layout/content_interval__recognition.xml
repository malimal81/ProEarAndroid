<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jamaljones.proear.Interval_Recognition">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView2"
        android:src="@drawable/proearbackground"
        android:scaleType="fitXY" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#F4F6F6FF"
            android:layout_weight="5">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:id="@+id/menuButton"
                android:textColor="#007AFF"
                android:textStyle="bold"
                android:textSize="17sp"
                android:background="#00000000"
                android:soundEffectsEnabled="false"
                android:paddingLeft="8dp"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="1"
                android:gravity="center_vertical|left" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:layout_weight="1" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:layout_gravity="center_vertical|right" />


        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#F6F6FF">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Unison"
                    android:id="@+id/unisonButton"
                    android:background="@drawable/glossy_light_grey_button"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#007AFF"
                    android:layout_margin="4dp"
                    android:soundEffectsEnabled="false"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Minor 2nd"
                    android:id="@+id/minorSecondButton"
                    android:background="@drawable/glossy_light_grey_button"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#007AFF"
                    android:layout_margin="4dp"
                    android:soundEffectsEnabled="false"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Major 2nd"
                    android:id="@+id/majorSecondButton"
                    android:background="@drawable/glossy_light_grey_button"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#007AFF"
                    android:layout_margin="4dp"
                    android:soundEffectsEnabled="false"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Minor 3rd"
                    android:id="@+id/minorThirdButton"
                    android:background="@drawable/glossy_light_grey_button"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#007AFF"
                    android:layout_margin="4dp"
                    android:soundEffectsEnabled="false"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Major 3rd"
                    android:id="@+id/majorThirdButton"
                    android:background="@drawable/glossy_light_grey_button"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#007AFF"
                    android:layout_margin="4dp"
                    android:soundEffectsEnabled="false"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Perfect 4th"
                    android:id="@+id/perfectFourthButton"
                    android:background="@drawable/glossy_light_grey_button"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#007AFF"
                    android:layout_margin="4dp"
                    android:soundEffectsEnabled="false"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tritone"
                    android:id="@+id/tritoneButton"
                    android:background="@drawable/glossy_light_grey_button"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#007AFF"
                    android:layout_margin="4dp"
                    android:soundEffectsEnabled="false"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Perfect 5th"
                    android:id="@+id/perfectFifthButton"
                    android:background="@drawable/glossy_light_grey_button"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#007AFF"
                    android:layout_margin="4dp"
                    android:soundEffectsEnabled="false"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Minor 6th"
                    android:id="@+id/minorSixthButton"
                    android:background="@drawable/glossy_light_grey_button"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#007AFF"
                    android:layout_margin="4dp"
                    android:soundEffectsEnabled="false"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Major 6th"
                    android:id="@+id/majorSixthButton"
                    android:background="@drawable/glossy_light_grey_button"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#007AFF"
                    android:layout_margin="4dp"
                    android:soundEffectsEnabled="false"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Minor 7th"
                    android:id="@+id/minorSeventhButton"
                    android:background="@drawable/glossy_light_grey_button"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#007AFF"
                    android:layout_margin="4dp"
                    android:soundEffectsEnabled="false"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Major 7th"
                    android:id="@+id/majorSeventhButton"
                    android:background="@drawable/glossy_light_grey_button"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#007AFF"
                    android:layout_margin="4dp"
                    android:soundEffectsEnabled="false"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/imageView4" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.15"
                    android:background="@drawable/glossy_light_grey_button"
                    android:text="Octave"
                    android:id="@+id/octaveButton"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#007AFF"
                    android:layout_margin="4dp"
                    android:soundEffectsEnabled="false"/>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/imageView5" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:background="#F6F6FF">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:indeterminate="false"
                android:max="20"
                android:progress="1"
                android:minHeight="8dp"
                android:layout_gravity="center_vertical"
                android:minWidth="80dp"
                android:backgroundTintMode="add"
                android:background="#AAAAAA"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Progress: 0"
                android:id="@+id/progressTextView"
                android:layout_weight="1"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#007AFF"
                android:gravity="center|center_vertical"
                android:layout_gravity="center_vertical" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play"
                android:id="@+id/playButton"
                android:textColor="#29C95D"
                android:textStyle="bold"
                android:textSize="17sp"
                android:background="#00000000"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:layout_marginRight="8dp"
                android:paddingRight="8dp"
                android:layout_gravity="center_vertical"
                android:soundEffectsEnabled="false"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
