<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jamaljones.proear.Pitch_Recognition">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView7"
        android:src="@drawable/proearbackground"
        android:scaleType="fitXY" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#F4F6F6FF"
            android:layout_weight="5">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:id="@+id/menuButton"
                android:textColor="#007AFF"
                android:textStyle="bold"
                android:textSize="17sp"
                android:background="#00000000"
                android:soundEffectsEnabled="false"
                android:paddingLeft="8dp"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="1"
                android:gravity="center_vertical|left" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:layout_weight="1" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:layout_gravity="center_vertical|right" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/whiteKeys"
                android:layout_alignParentTop="false">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:soundEffectsEnabled="false"
                    android:id="@+id/cButton"
                    android:background="@drawable/white_key" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:soundEffectsEnabled="false"
                    android:id="@+id/dButton"
                    android:background="@drawable/white_key"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:soundEffectsEnabled="false"
                    android:id="@+id/eButton"
                    android:background="@drawable/white_key"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:soundEffectsEnabled="false"
                    android:id="@+id/fButton"
                    android:background="@drawable/white_key"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:soundEffectsEnabled="false"
                    android:id="@+id/gButton"
                    android:background="@drawable/white_key"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:soundEffectsEnabled="false"
                    android:id="@+id/aButton"
                    android:background="@drawable/white_key"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:soundEffectsEnabled="false"
                    android:id="@+id/bButton"
                    android:background="@drawable/white_key"/>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/whiteGreenKeys"
                android:layout_alignParentTop="false">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:id="@+id/cGreen"
                    android:src="@drawable/white_key_green"
                    android:scaleType="fitXY"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:id="@+id/dGreen"
                    android:src="@drawable/white_key_green"
                    android:scaleType="fitXY"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:id="@+id/eGreen"
                    android:src="@drawable/white_key_green"
                    android:scaleType="fitXY"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:id="@+id/fGreen"
                    android:src="@drawable/white_key_green"
                    android:scaleType="fitXY"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:id="@+id/gGreen"
                    android:src="@drawable/white_key_green"
                    android:scaleType="fitXY"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:id="@+id/aGreen"
                    android:src="@drawable/white_key_green"
                    android:scaleType="fitXY"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:id="@+id/bGreen"
                    android:src="@drawable/white_key_green"
                    android:scaleType="fitXY"
                    android:visibility="invisible" />


            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/blackKeys">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/imageView8"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView9"
                        android:layout_weight=".96"
                        android:visibility="invisible" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cSButton"
                        android:layout_weight=".97"
                        android:background="@drawable/black_key"
                        android:soundEffectsEnabled="false" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView10"
                        android:layout_weight="1"
                        android:visibility="invisible" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/dSButton"
                        android:layout_weight=".97"
                        android:background="@drawable/black_key"
                        android:soundEffectsEnabled="false" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView11"
                        android:layout_weight=".85"
                        android:visibility="invisible" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/fSButton"
                        android:layout_weight=".97"
                        android:background="@drawable/black_key"
                        android:soundEffectsEnabled="false" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView12"
                        android:layout_weight="1"
                        android:visibility="invisible" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/gSButton"
                        android:layout_weight=".97"
                        android:background="@drawable/black_key"
                        android:soundEffectsEnabled="false" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView13"
                        android:layout_weight="1"
                        android:visibility="invisible" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/aSButton"
                        android:layout_weight=".97"
                        android:background="@drawable/black_key"
                        android:soundEffectsEnabled="false" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView14"
                        android:layout_weight=".96"
                        android:visibility="invisible" />

                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView16"
                    android:src="@drawable/white_key"
                    android:scaleType="fitXY"
                    android:visibility="invisible"
                    android:layout_weight="1.25" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/blackGreenKeys">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/imageView8"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView15"
                        android:layout_weight=".96"
                        android:visibility="invisible" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cSGreen"
                        android:layout_weight=".97"
                        android:background="@drawable/black_key_green"
                        android:visibility="invisible" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView17"
                        android:layout_weight="1"
                        android:visibility="invisible" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/dSGreen"
                        android:layout_weight=".97"
                        android:background="@drawable/black_key_green"
                        android:visibility="invisible" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView18"
                        android:layout_weight=".85"
                        android:visibility="invisible" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/fSGreen"
                        android:layout_weight=".97"
                        android:background="@drawable/black_key_green"
                        android:visibility="invisible" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView19"
                        android:layout_weight="1"
                        android:visibility="invisible" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/gSGreen"
                        android:layout_weight=".97"
                        android:background="@drawable/black_key_green"
                        android:visibility="invisible" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView20"
                        android:layout_weight="1"
                        android:visibility="invisible" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/aSGreen"
                        android:layout_weight=".97"
                        android:background="@drawable/black_key_green"
                        android:visibility="invisible" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView21"
                        android:layout_weight=".96"
                        android:visibility="invisible" />

                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView8"
                    android:src="@drawable/white_key"
                    android:scaleType="fitXY"
                    android:visibility="invisible"
                    android:layout_weight="1.25" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:background="#F6F6FF">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:indeterminate="false"
                android:max="20"
                android:progress="1"
                android:minHeight="8dp"
                android:layout_gravity="center_vertical"
                android:minWidth="80dp"
                android:backgroundTintMode="add"
                android:background="#AAAAAA"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Progress: 0"
                android:id="@+id/progressTextView"
                android:layout_weight="1"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#007AFF"
                android:gravity="center|center_vertical"
                android:layout_gravity="center_vertical" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play"
                android:id="@+id/playButton"
                android:textColor="#29C95D"
                android:textStyle="bold"
                android:textSize="17sp"
                android:background="#00000000"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:layout_marginRight="8dp"
                android:paddingRight="8dp"
                android:layout_gravity="center_vertical"
                android:soundEffectsEnabled="false" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
